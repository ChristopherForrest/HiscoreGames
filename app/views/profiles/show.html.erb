

<nav class="navbar sticky-top navbar-light" style="background-color:black; height:55px; border-bottom:white 3px solid;" >
    <a href="/games"><img class='icon' src="/assets/Hiscore.jpg" width="50" height="50" alt=""></a>
    
     <%if user_signed_in?%>
     <a class="btn btn-primary" href="/games/new">New Game</a>
      <a class="btn btn-primary" href="/conversations">Messages</a>
     <a class="btn btn-primary" href="/profiles/<%=current_user.id%>">My Profile</a>
     <a class="btn btn-primary"<%= link_to('Log Out', destroy_user_session_path, method: :delete) %>></a>
      <!-- <%= link_to 'New Game', new_game_path %> -->
        <% else %>
        <a class="btn btn-primary" href="/users/sign_in" role="button" id="CreateAccount">Login</a> 
        <a class="btn btn-primary" href="/users/sign_up" role="button" id="CreateAccount">Create Account</a>
     <%end%>
    <form class="form-inline">
      <%=search_form_for @search do |f|%>
        <input class="form-control mr-sm-2" type="search" placeholder="Search Games" aria-label="Search"<%= f.text_field :title_cont%>>
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
      <%end%>
    </form>
</nav>




<div class="container">
    <div id="gameform" class="form-group">

  <%if @profile.exists?%>

    <% @profile.each do |b| %>
        <a><img class="GamePictureShow"  src="<%=b.profilepicture%>" onerror= this.src='/assets/NoPhoto'></a>
        <hr>

            <div class= "col-12">
              <div class="showprofile">
                <div class = "profileinfo">      
                  <div>name: <%= b.name %> </div>
                  <div>bio: <%= b.bio %> </div>
                  <div>location: <%= b.location %> </div>
                  <div>age: <%= b.age %> </div>
                  <div>favourite games: <%= b.favouritegames %> </div>
                </div>
              </div>    
             </div> 

             

          <%end%>   

 

          <%else%>
                  <a><img class="GamePictureShow"  src='/assets/NoPhoto'></a>
                  <hr>
    
                        <div class= "col-12">
          
                    <div class="showprofile">
                <div class = "profileinfo"> 
                  <div>name: Not given </div>
                  <div>bio: Not given</div>
                  <div>location: Not given </div>
                  <div>age: Not given</div>
                  <div>favourite games: Not given</div>
                  </div>
                  </div>
              </div>
          <%end%>

 

</div>
</div>